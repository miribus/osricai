{
    "category": "Character Attributes",
    "rules": {
        "Ability Scores": "Characters have six ability scores: Strength (Str), Dexterity (Dex), Constitution (Con), Intelligence (Int), Wisdom (Wis), and Charisma (Cha). These define physical and mental traits.",
        "Ability Score Range": "Each ability score ranges from 3 to 18, with higher values indicating greater proficiency.",
        "Ability Score Generation": {
            "3d6 Method": "Rolling 3d6 per ability in order creates a challenging, randomized character.",
            "4d6 Drop Lowest": "Rolling 4d6 and removing the lowest die allows stronger characters.",
            "Flexible Assignment": "Many GMs allow players to roll six ability scores and assign them freely."
                },
        "Strength": {
            "Definition": "Strength ('Str') measures physical power and influences combat effectiveness.",
            "Exceptional Strength": "Fighters, paladins, and rangers with 18 Strength roll d% for an extended score up to 19.",
            "Strength Mechanics": {
                "Bonus to Hit": {
                    "3": -3, "4-5": -2, "6-7": -1, "8-9": 0, "10-11": 0, "12-13": 0,
                    "14-15": 0, "16": 0, "17": 0, "18": 1, "18.01-18.50": 1, "18.51-18.75": 1,
                    "18.76-18.90": 2, "18.91-18.99": 2, "19": 3
                    },
                "Bonus to Damage": {
                    "3": -1, "4-5": -1, "6-7": 0, "8-9": 0, "10-11": 0, "12-13": 0,
                    "14-15": 1, "16": 1, "17": 1, "18": 2, "18.01-18.50": 3, "18.51-18.75": 3,
                    "18.76-18.90": 3, "18.91-18.99": 5, "19": 6
                    },
                "Encumbrance Adjustment (lbs)": {
                    "3": -35, "4-5": -25, "6-7": -15, "8-9": 0, "10-11": 0, "12-13": 0,
                    "14-15": 20, "16": 35, "17": 50, "18": 75, "18.01-18.50": 100, "18.51-18.75": 125,
                    "18.76-18.90": 150, "18.91-18.99": 200, "19": 300
                    },
                "Minor Tests (e.g., forcing doors on d6)": {
                    "3": 1, "4-5": 1, "6-7": 1, "8-9": "1-2", "10-11": "1-2", "12-13": "1-2",
                    "14-15": "1-2", "16": "1-2", "17": "1-3", "18": "1-3", "18.01-18.50": "1-3",
                    "18.51-18.75": "1-4", "18.76-18.90": "1-4", "18.91-18.99": "1-4 (1 in 6 extraordinary success)",
                    "19": "1-5 (1 in 6 extraordinary success)"
                    },
                "Major Tests (e.g., bending bars/lifting portcullis on d%)": {
                    "3": 0, "4-5": 0, "6-7": 0, "8-9": 1, "10-11": 2, "12-13": 4,
                    "14-15": 7, "16": 10, "17": 13, "18": 16, "18.01-18.50": 20, "18.51-18.75": 25,
                    "18.76-18.90": 30, "18.91-18.99": 35, "19": 40
                    }
                }
            },
        "Dexterity": {
            "Definition": "Dexterity ('Dex') measures speed, hand-eye coordination, and agility. It affects missile accuracy and defensive reflexes.",
            "Dexterity Mechanics": {
                "Surprise Bonus": {
                    "3": "+4", "4": "+3", "5": "+2", "6": "0", "7": "0", "8": "0",
                    "9": "0", "10": "0", "11": "0", "12": "0", "13": "0", "14": "0",
                    "15": "0", "16": "+1", "17": "+2", "18": "+3", "19": "+3"
                    },
                "Missile Bonus to Hit": {
                    "3": "-3", "4": "-2", "5": "-1", "6": "0", "7": "0", "8": "0",
                    "9": "0", "10": "0", "11": "0", "12": "0", "13": "0", "14": "0",
                    "15": "0", "16": "+1", "17": "+2", "18": "+3", "19": "+3"
                    },
                "Armor Class (AC) Adjustment": {
                    "3": "+4", "4": "+3", "5": "+2", "6": "+1", "7": "0", "8": "0",
                    "9": "0", "10": "0", "11": "0", "12": "0", "13": "0", "14": "0",
                    "15": "-1", "16": "-2", "17": "-3", "18": "-4", "19": "-4"
                    },
                "Initiative": {
                    "Melee Combat": "Dexterity does not modify initiative except in surprise situations.",
                    "Missile Combat": "Dexterity may modify initiative in ranged combat scenarios."
                    }
                }
            },
        "Constitution": {
            "Definition": "Constitution ('Con') measures a character's health and vitality. Higher scores grant bonus hit points and improve survivability.",
            "Constitution Mechanics": {
                "Hit Point Bonus per Die": {
                    "3": "-2", "4": "-1", "5": "-1", "6": "-1", "7": "0", "8": "0",
                    "9": "0", "10": "0", "11": "0", "12": "0", "13": "0", "14": "0",
                    "15": "+1", "16": "+2", "17": "+2 (+3 for Fighters, Paladins, Rangers)",
                    "18": "+2 (+4 for Fighters, Paladins, Rangers)", "19": "+2 (+5 for Fighters, Paladins, Rangers)"
                    },
                "Survive Resurrection/Raise Dead (d%)": {
                    "3": "40", "4": "45", "5": "50", "6": "55", "7": "60", "8": "65",
                    "9": "70", "10": "75", "11": "80", "12": "85", "13": "90", "14": "92",
                    "15": "94", "16": "96", "17": "98", "18": "100", "19": "100"
                    },
                "Survive System Shock (Minor Test, d%)": {
                    "3": "35", "4": "40", "5": "45", "6": "50", "7": "55", "8": "60",
                    "9": "65", "10": "70", "11": "75", "12": "80", "13": "85", "14": "88",
                    "15": "91", "16": "95", "17": "97", "18": "99", "19": "99"
                    }
                }
            },
        "Intelligence": {
            "Definition": "Intelligence ('Int') represents a character's mental power, ability to recall facts, and solve abstract problems. It is essential for magic users and illusionists.",
            "Intelligence Mechanics": {
                "Additional Languages": {
                    "3": 0, "4": 0, "5": 0, "6": 0, "7": 0, "8": 1,
                    "9": 1, "10": 2, "11": 2, "12": 3, "13": 3, "14": 4,
                    "15": 4, "16": 5, "17": 6, "18": 7, "19": 8
                    },
                "Illusion Resistance": {
                    "18+": "Characters with Intelligence above 18 are unaffected by certain illusion spells.",
                    "19": "Immune to first-level illusion spells.",
                    "20": "Immune to second-level illusion spells, and so on."
                    }
                }
            },
        "Wisdom": {
            "Definition": "Wisdom ('Wis') measures awareness, intuition, and mystical attunement. It is the most important attribute for clerics and druids.",
            "Wisdom Mechanics": {
                "Mental Saving Throw Bonus": {
                    "3": "-3", "4": "-2", "5": "-1", "6": "-1", "7": "-1", "8": "0",
                    "9": "0", "10": "0", "11": "0", "12": "0", "13": "0", "14": "0",
                    "15": "+1", "16": "+2", "17": "+3", "18": "+4", "19": "+5"
                    }
                }
            },
        "Charisma": {
            "Definition": "Charisma ('Cha') measures a character's ability to lead, persuade, and influence NPCs and henchmen. It determines the number of henchmen a character can have, their loyalty, and reaction bonuses.",
            "Charisma Mechanics": {
            "Maximum Henchmen": {
                "3": 1, "4": 1, "5": 2, "6": 2, "7": 3, "8": 3,
                "9": 4, "10": 4, "11": 4, "12": 5, "13": 5, "14": 6,
                "15": 7, "16": 8, "17": 10, "18": 15, "19": 20
                },
            "Loyalty Bonus (d%)": {
                "3": "-30", "4": "-25", "5": "-20", "6": "-15", "7": "-10", "8": "-5",
                "9": "0", "10": "0", "11": "0", "12": "0", "13": "0", "14": "+5",
                "15": "+15", "16": "+20", "17": "+30", "18": "+40", "19": "+50"
                },
            "Reaction Bonus (d%)": {
                "3": "-25", "4": "-20", "5": "-15", "6": "-10", "7": "-5", "8": "0",
                "9": "0", "10": "0", "11": "0", "12": "0", "13": "+5", "14": "+10",
                "15": "+15", "16": "+25", "17": "+30", "18": "+35", "19": "+40"
                },
            "Reaction Rolls": "NPC reactions are influenced by Charisma but not determined solely by it. Some creatures will remain hostile regardless of the characterâ€™s charisma.",
            "Negotiation Language Requirement": "Characters must communicate in a language understood by the NPC or creature for Charisma-based effects to apply."
            }
        }
    }
}